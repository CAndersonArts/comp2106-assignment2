<%- include ../partials/header.ejs %>

<main class="container">
    <h1>Register</h1>

    <form method="post" action="/auth/register">
    <div class="row">
        <fieldset class="input-field col s12">
            <label for="username">Username: *</label>
            <input name="username" id="username" required />
        </fieldset>
        <fieldset class="input-field col s12">
            <label for="password">Password: *</label>
            <input name="password" id="password" type="password" required />
        </fieldset>
        <fieldset class="input-field col s12">
            <label for="confirm">Confirm: *</label>
            <input name="confirm" id="confirm" type="password" required />
        </fieldset>
        </div>
        <div class="row">
        <button class="btn red darken-4 waves-effect waves-light white-text">Register</button>
        <hr />
        Already have an account?  <a href="/auth/login" title="Login">Login</a>
        </div>
    </form>

</main>

<%- include ../partials/footer.ejs %>